{
  "name": "zgzg-wechat-bot",
  "version": "2.0.1",
  "description": "",
  "main": "src/main.ts",
  "scripts": {
    "lint": "npx eslint src --ext .ts",
    "start": "npx ts-node src/main.ts",
    "format": "npx prettier --write '{src/**/*.{ts,md},*.md,docs/**/*.md}'",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "echo \"Warning: no unit test specified\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zgzgorg/zgzg-bot.git"
  },
  "author": "",
  "keywords":[
    "bot",
    "wechat",
    "wechaty",
    "wechat-bot",
    "zgzg",
    "zgzg-bot",
    "zgzgorg"
  ],
  "license": "",
  "bug":{
    "url": "https://github.com/zgzgorg/zgzg-bot/issues"
  },
  "homepage": "https://github.com/zgzgorg/zgzg-bot/blob/master/README.md",
  "peerDependencies": {},  
  "dependencies": {
    "@types/node": "^14.0.5",
    "cjk-conv": "^1.2.57",
    "dotenv": "^8.2.0",
    "log4js": "^6.3.0",
    "log4js-stackdriver-appender": "^1.0.5",
    "mongodb": "^3.1.13",
    "qrcode-terminal": "^0.12.0",
    "wechaty": "^0.38.4",
    "wechaty-puppet-padplus": "^0.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.8",
    "prettier": "^2.0.5",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333",
    "wechaty-puppet-padpro": "0.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "lint-staged": {
    "{src/**/*.{ts,md},*.md,docs/**/*.md}": [
      "npx eslint src --ext .ts --fix",
      "npx prettier --write"
    ],
    "*": "./scripts/pre-commit.sh"
  }
}
